<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.daryasoft.fintracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".initialization.FinTrackerApplication"
        android:fullBackupContent="true">
        <activity android:name=".main.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".category.ui.CategoriesActivity" />
        <activity android:name=".account.ui.AccountsActivity" />
        <activity android:name=".transaction.ui.AddTransactionActivity" />
    </application>

</manifest>